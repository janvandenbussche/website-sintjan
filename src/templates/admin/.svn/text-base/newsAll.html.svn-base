{% include "../inc/header.html" %}
{% include "inc.left.html" %}

	<div id="plaats"><strong>U bent hier&nbsp;:&nbsp;</strong>
		<a href="/admin">Admin</a><span class="arrow">&nbsp;&gt;&nbsp;</span>
		<a href="/admin/news/all">Het nieuws</a>
	</div>

	<div id="sjCenter" class="sj23">
		<div class="sjPadding">
			<h1>Alle nieuws, echt alles...</h1>

			<table class="overview" moreTarget="1">
				<thead>
					<tr><th>Title</th><th>Datum</th><th>Zichtbaar</th><th class="action">Acties</th></tr>
				</thead>
				<tbody>
					{% for item in list %}
					<tr moreItem="{{item.formatDate}}">
						<td>{{item.title}}</td>
						<td>{{item.formatted}}</td>
						<td class="bool{{item.visible}}">{{item.visible}}</td>
						<td class="action"><a href="/admin/news/edit?newsid={{item.key.id}}">edit</a></td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
			
			<div class="more" moreBtn="1">
				<a href="javascript:void(0)" onclick="sj.more({url:'/admin/news/more',moreId:1})">Laad meer</a>	
				<p style="display:none;">Laden ... </p>
			</div>

		</div>
	</div>

{% include "../inc/footer.html" %}






