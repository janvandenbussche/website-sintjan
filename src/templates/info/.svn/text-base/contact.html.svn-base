	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=nl"></script>
	<script type="text/javascript">
		function map(id)
		{
		    var center, map, mapOptions, markerOptions, gmMap, gmMarker;
	
		    center = new google.maps.LatLng(51.16317, 5.26421),
		    map = document.getElementById(id);
	
		    mapOptions = {
		        zoom: 14,
		        center: center,
		        mapTypeId: google.maps.MapTypeId.ROADMAP,
		        mapTypeControlOptions: {style: google.maps.MapTypeControlStyle.DROPDOWN_MENU}
		    };
	
		    markerOptions = {
		        position: center,
		        draggable: false,
		        flat: false
		    };
	
		    gmMap = new google.maps.Map(map, mapOptions);
		    gmMarker = new google.maps.Marker(markerOptions);
		    gmMarker.setMap(gmMap);
		}

		map("_map");
	</script>

